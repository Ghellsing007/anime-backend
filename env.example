# ========================================
# CONFIGURACI√ìN DEL DATA SOURCE MANAGER
# ========================================

# üîß FUENTE DE DATOS PRINCIPAL
# Valores: 'jikan', 'mongodb', 'cdn', 'hybrid'
# 'cdn' = Solo archivos JSON del CDN (m√°s r√°pido)
# 'hybrid' = CDN + fallback a Jikan (recomendado)
ANIME_DATA_SOURCE=cdn

# üöÄ FORZAR USO EXCLUSIVO DE JIKAN
# Valores: 'true', 'false'
# Prioridad m√°xima - ignora otras configuraciones
FORCE_JIKAN=false

# üíæ HABILITAR CACHE
# Valores: 'true', 'false'
# Si es 'false', usa solo Jikan
CACHE_ENABLED=true

# ========================================
# CONFIGURACI√ìN DEL CDN JSON
# ========================================

# ‚è±Ô∏è TIMEOUT PARA CARGAR ARCHIVOS CDN (ms)
CDN_TIMEOUT=30000

# üîÑ N√öMERO M√ÅXIMO DE REINTENTOS
CDN_MAX_RETRIES=3

# ‚è≥ DELAY ENTRE REINTENTOS (ms)
CDN_RETRY_DELAY=1000

# üîÑ INTERVALO DE RECARGA AUTOM√ÅTICA (ms)
# 6 horas = 21600000ms
CDN_RELOAD_INTERVAL=21600000

# ========================================
# CONEXIONES DE BASE DE DATOS
# ========================================

# üóÑÔ∏è MONGODB (Opcional - solo si usa MongoDB)
# URI de conexi√≥n a MongoDB Atlas o local
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/anime?retryWrites=true&w=majority

# üîê SUPABASE (Opcional - solo si usa Supabase)
# URL de tu proyecto Supabase
SUPABASE_URL=https://your-project.supabase.co

# Clave an√≥nima de Supabase
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# CONFIGURACIONES DE DESARROLLO
# ========================================

# üåç PUERTO DEL SERVIDOR
PORT=5000

# üîç MODO DEBUG
NODE_ENV=development

